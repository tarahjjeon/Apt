<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".Main3Activity">
<ImageButton
    android:layout_marginTop="5dp"
    android:background="#ffffff"
    android:id="@+id/setBtn3"
    android:src="@drawable/settingicon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="220dp"
    />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#bb0f0f8d"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/notice1"
            android:text="아파트 공지"
            android:textAlignment="center"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

            <TextView
                android:id="@+id/notice2"
                android:background="#eeeeee"
                android:text="우리 동 공지"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="#33ffee"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/complaint"
                android:layout_marginTop="10dp"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="민원"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/delivery"
                android:layout_marginTop="10dp"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="택배"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/visitCar"
                android:layout_marginTop="10dp"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="10dp"
                android:text="방문차량등록"
                android:textAlignment="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/community"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#e4e1aa"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="커뮤니티"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>