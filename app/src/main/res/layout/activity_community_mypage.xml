<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityMypage">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView

            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="@drawable/mypagebar"
            android:gravity="center_vertical" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/writeicon"
            android:shadowColor="#f1c550"/>

    </LinearLayout>
    <TextView
        android:id="@+id/showNick"
        android:layout_width="300dp"

        android:textSize="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textColor="#f1c550"
        android:layout_height="80dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/change_nicknamebtn"
            android:layout_marginHorizontal="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/letterbtn"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:background="@drawable/my_write_list"
        android:gravity="center_vertical" />

    <GridView
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>

</LinearLayout>