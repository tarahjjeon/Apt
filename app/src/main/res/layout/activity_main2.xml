<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    >


    <TextView
        android:background="@drawable/u1"
        android:scaleType="fitXY"
       android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"

        android:layout_width="180dp"
        android:layout_height="60dp" />
    <EditText
        android:id="@+id/newPw"
        android:hint="비밀번호를 입력하세요"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/u2"
        android:scaleType="fitXY"/>
    <LinearLayout
       android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       >

        <EditText
       android:id="@+id/carNum"
        android:hint="차량 번호를 등록하세요"


            android:layout_width="220dp"
        android:layout_height="match_parent"
            android:background="@drawable/u2"
            android:scaleType="fitXY"  />


        <Button

            android:id="@+id/addCarBtn"

            android:background="@drawable/u3"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:id="@+id/car2Num"
        android:layout_width="220dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:background="@drawable/u2"
        android:scaleType="fitXY"
        android:hint="차량 번호를 등록하세요" />
    <EditText
        android:id="@+id/car3Num"
        android:hint="차량 번호를 등록하세요"
        android:layout_marginLeft="40dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/u2"
        android:scaleType="fitXY"  />
    <Button
        android:id="@+id/userSetBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
       android:layout_marginLeft="110dp"

        android:background="@drawable/u4"
        android:scaleType="fitXY"
        />



</LinearLayout>