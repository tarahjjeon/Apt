<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/v6"
    tools:context=".visitCar">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@drawable/car" />
        <TextView
            android:layout_marginLeft="55dp"
            android:layout_width="150dp"

            android:layout_height="50dp"
            android:background="@drawable/v1"/>
    </LinearLayout>
    <LinearLayout

        android:layout_marginHorizontal="20dp"

       android:layout_marginVertical="15dp"
        android:paddingTop="10dp"
            android:layout_width="320dp"
            android:layout_height="match_parent"
        android:orientation="vertical"
       android:paddingHorizontal="10dp"


            >
            <TextView
                android:layout_marginVertical="5dp"
                android:background="@drawable/v2"
                android:layout_width="120dp"
                android:layout_height="45dp"
                />
            <EditText
                android:hint="방문 차량 번호를 입력하세요"
                android:id="@+id/vCarNum"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/v3"
                android:layout_width="270dp"
                android:layout_height="45dp"/>
            <TextView
                android:layout_marginVertical="5dp"
                android:background="@drawable/v4"
                android:layout_width="120dp"
                android:layout_height="45dp"
                />
            <EditText
                android:hint="방문 기간을 입력하세요(mm/dd)"
                android:id="@+id/vCarDate"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/v3"
                android:layout_width="270dp"
                android:layout_height="45dp"/>
        <Button
            android:id="@+id/vCarSave"
            android:layout_marginVertical="5dp"
           android:gravity="center_vertical"
          android:layout_marginLeft="75dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/v5"/>
        </LinearLayout>



</LinearLayout>