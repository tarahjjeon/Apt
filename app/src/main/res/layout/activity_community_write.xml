<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Community_write">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/communitywrite_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/write_select1"/>
        <Button
            android:id="@+id/write_btn"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/write_btn"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:text="글 제목"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/write_title"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:hint="제목를 입력하세요"
                android:focusable="true"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="가격"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/write_price"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:hint="가격을 입력하세요"
            android:inputType="number"/>
        <CheckBox
            android:id="@+id/write_isfree"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:text="무료나눔"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="내용"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/write_content"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:lines="4"
            android:scrollbars="vertical"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:hint="내용을 입력하세요" />
    </LinearLayout>

</LinearLayout>